<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="UI">
		<ListPreference android:key="background_list_preference"
			android:title="App Background" android:summary="Change the background image"
			android:entries="@array/background_entries_list" android:entryValues="@array/background_entries_list_values"
			android:dialogTitle="List of Backgrounds" />
		<CheckBoxPreference android:key="customBackground_preference"
			android:summaryOn="Enabled" android:summaryOff="Disabled"
			android:title="Custom Background" android:summary="Enable/Disable Custom Background"
			android:defaultValue="false" />
		<CheckBoxPreference android:key="quickSearch_preference"
			android:summaryOn="Enabled" android:summaryOff="Disabled"
			android:title="Quick Search" android:summary="Enable/Disable Quick Search"
			android:defaultValue="true" />
		<CheckBoxPreference android:key="spotifyButton_preference"
			android:summaryOn="Enabled" android:summaryOff="Disabled"
			android:title="Spotify Button" android:summary="Enable/Disable Spotify Button"
			android:defaultValue="true" />
		<CheckBoxPreference android:key="lastfmButton_preference"
			android:summaryOn="Enabled" android:summaryOff="Disabled"
			android:title="Last.FM Button" android:summary="Enable/Disable Last.FM Button"
			android:defaultValue="true" />
		<!-- <CheckBoxPreference android:key="donateButton_preference" android:summaryOn="Enabled" 
			android:summaryOff="Disabled" android:title="Donate Button" android:summary="Enable/Disable 
			Donate Button" android:defaultValue="false" /> -->
	</PreferenceCategory>
	<PreferenceCategory android:title="Services">
		<CheckBoxPreference android:key="announcementsService_preference"
			android:summaryOn="Enabled" android:summaryOff="Disabled"
			android:title="Announcements Service"
			android:summary="Enable/Disable Announcements Service. Periodically notifies you of new announcements and blog posts."
			android:defaultValue="true" />
		<EditTextPreference android:key="announcementsService_interval"
			android:title="Refresh Interval"
			android:dialogMessage="Set the refresh rate in minutes, minimum is 30, default is 180."
			android:dialogTitle="Announcements Refresh Interval"
			android:defaultValue="180" />
		<CheckBoxPreference android:key="inboxService_preference"
			android:summaryOn="Enabled" android:summaryOff="Disabled"
			android:title="Inbox Service"
			android:summary="Enable/Disable Inbox Service. Periodically notifies you of new message in your inbox."
			android:defaultValue="true" />
		<EditTextPreference android:key="inboxService_interval"
			android:title="Refresh Interval"
			android:dialogMessage="Set the refresh rate in minutes, minimum is 30, default is 60."
			android:dialogTitle="Inbox Refresh Interval" android:defaultValue="60" />
		<CheckBoxPreference android:key="notificationsService_preference"
			android:summaryOn="Enabled" android:summaryOff="Disabled"
			android:title="Notifications Service"
			android:summary="Enable/Disable Notifications Service. Periodically notifies you of new torrent notifications. Need to be Power User of higher."
			android:defaultValue="false" />
		<EditTextPreference android:key="notificationsService_interval"
			android:title="Refresh Interval" android:dialogTitle="Notifications Refresh Interval"
			android:dialogMessage="Set the refresh rate in minutes, minimum is 30, default is 180."
			android:defaultValue="180" />

	</PreferenceCategory>
</PreferenceScreen>
