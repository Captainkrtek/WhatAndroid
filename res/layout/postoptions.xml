<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="horizontal" android:gravity="fill_vertical">
	
	<LinearLayout android:id="@+id/buttons1"
		android:layout_marginLeft="15dip" android:layout_marginRight="15dip"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:orientation="horizontal">
		<Button android:text="Reply" android:id="@+id/button1"
			android:background="@drawable/btn_black" style="@style/ButtonText"
			android:onClick="reply" android:layout_height="wrap_content"
			android:layout_weight="1" android:layout_width="0dp"></Button>
	</LinearLayout>
	<LinearLayout android:id="@+id/buttons2"
	android:layout_below="@+id/buttons1"
		android:layout_marginLeft="15dip" android:layout_marginRight="15dip"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:orientation="horizontal">
		<Button android:text="Quote and Reply" android:id="@+id/button2"
			android:background="@drawable/btn_black" style="@style/ButtonText"
			android:onClick="quoteAndReply" android:layout_height="wrap_content"
			android:layout_weight="1" android:layout_width="0dp"></Button>
	</LinearLayout>
	<LinearLayout android:id="@+id/buttons3"
	android:layout_below="@+id/buttons2"
		android:layout_marginLeft="15dip" android:layout_marginRight="15dip"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:orientation="horizontal">
		<Button android:text="Quote" android:id="@+id/button3"
			android:background="@drawable/btn_black" style="@style/ButtonText"
			android:onClick="quote" android:layout_height="wrap_content"
			android:layout_weight="1" android:layout_width="0dp"></Button>
	</LinearLayout>
	<LinearLayout android:id="@+id/buttons4"
	android:layout_below="@+id/buttons3"
		android:layout_marginLeft="15dip" android:layout_marginRight="15dip"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:orientation="horizontal">
		<Button android:text="User Profile" android:id="@+id/button4"
			android:background="@drawable/btn_black" style="@style/ButtonText"
			android:onClick="openUserProfile" android:layout_height="wrap_content"
			android:layout_weight="1" android:layout_width="0dp"></Button>
	</LinearLayout>
</RelativeLayout>