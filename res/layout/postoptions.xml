<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<Button android:id="@+id/quoteButton" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:text="Quote"
		android:onClick="quotePost"
		android:layout_gravity="right" android:layout_weight="1"></Button>
	<Button android:id="@+id/timeButton" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:text="Time"
		android:onClick="showPostTime"
		android:layout_gravity="right" android:layout_weight="1"></Button>
	<Button android:id="@+id/profileButton" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:text="Profile"
		android:onClick="openProfile"
		android:layout_gravity="right" android:layout_weight="1"></Button>
	<Button android:id="@+id/reportButton" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:text="Report"
		android:onClick="reportPost"
		android:layout_gravity="right" android:layout_weight="1"></Button>
</LinearLayout>
