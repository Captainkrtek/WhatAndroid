<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/widget30"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<TextView android:id="@+id/title" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true" 
		android:padding="5dip" 
		 android:text="Quick Scanner"
		android:textColor="@color/white" android:textStyle="bold"
		android:textSize="20dip" android:background="@drawable/table_header_dark">
	</TextView>
	<Button android:id="@+id/scanButton" android:background="@drawable/btn_black"
		style="@style/ButtonText" android:layout_below="@+id/title"
		android:text="Scan" android:onClick="scan" android:padding="5dip"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_margin="10dip" 
		android:layout_marginBottom="5dip"></Button>
	<Button android:id="@+id/clearButton" android:background="@drawable/btn_black"
		android:layout_below="@+id/scanButton" style="@style/ButtonText"
		android:text="Clear Barcodes" android:onClick="clear"
		android:padding="5dip" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:layout_margin="10dip"
		 
		android:layout_marginBottom="5dip"></Button>
	<Button android:id="@+id/sendButton" android:background="@drawable/btn_black"
		android:layout_below="@+id/clearButton" style="@style/ButtonText"
		android:text="Send Barcodes" android:onClick="send" android:padding="5dip"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_margin="10dip" 
		 android:layout_marginBottom="5dip"></Button>
</RelativeLayout>
