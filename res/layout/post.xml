<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/widget30"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout android:id="@+id/bar" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:background="@drawable/table_header_dark">

		<TextView android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="" android:id="@+id/username" android:layout_height="wrap_content"
			android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
			android:layout_width="wrap_content" android:layout_alignParentRight="true"
			android:layout_marginTop="5dip"></TextView>
		<TextView android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_height="wrap_content" android:id="@+id/time"
			android:layout_marginTop="5dip" android:layout_marginLeft="20dip"
			android:layout_width="wrap_content" android:text=""></TextView>
	</LinearLayout>
	<ImageView android:layout_height="wrap_content" android:src="@drawable/dne"
		android:adjustViewBounds="true"
		android:maxWidth="100px" android:layout_below="@+id/bar"
		android:layout_width="wrap_content" android:id="@+id/avatar"
		android:layout_alignParentLeft="true" android:layout_marginTop="5dip"></ImageView>
	<WebView android:text="" android:id="@+id/post"
		android:clickable="true" android:background="@color/transparentBlack"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/avatar"
		android:layout_alignParentRight="true" android:layout_alignTop="@+id/avatar" android:layout_alignBottom="@+id/avatar"></WebView>
</RelativeLayout>
