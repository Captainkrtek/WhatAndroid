<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/widget30"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/wood2" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:id="@+id/title" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true" android:layout_marginLeft="10dip"
		android:padding="5dip" android:layout_marginTop="10dip"
		android:layout_marginRight="10dip" android:text="Barcode Scanner"
		android:textColor="@color/white" android:textStyle="bold"
		android:textSize="20dip" android:background="@drawable/table_header_dark">
	</TextView>
	<Button android:layout_width="fill_parent" android:id="@+id/scanbutton"
		android:layout_below="@+id/title" android:text="Scan" android:onClick="scan"
		android:layout_marginTop="10dip" android:layout_marginLeft="5dip"
		android:layout_marginRight="10dip" android:layout_marginBottom="5dip"
		android:padding="5dip" android:layout_height="wrap_content"></Button>
	<Button android:layout_width="fill_parent" android:id="@+id/buybutton"
		android:layout_below="@+id/scanbutton" android:text="Buy Music"
		android:onClick="buy" android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip" android:layout_marginBottom="5dip"
		android:padding="5dip" android:layout_height="wrap_content"></Button>
	<ScrollView android:id="@+id/scrollView"
		android:layout_below="@id/buybutton" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_marginTop="10dip"
		android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
		android:layout_marginBottom="5dip" android:padding="5dip">
		<LinearLayout android:id="@+id/scrollLayout"
			android:layout_height="fill_parent" android:layout_width="fill_parent"
			android:orientation="vertical">
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
