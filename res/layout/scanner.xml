<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/widget30"
	xmlns:android="http://schemas.android.com/apk/res/android"
	 android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:id="@+id/title" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true" android:layout_marginLeft="10dip"
		android:padding="5dip" android:layout_marginTop="10dip"
		android:layout_marginRight="10dip" android:text="Barcode Scanner"
		android:textColor="@color/white" android:textStyle="bold"
		android:textSize="20dip" android:background="@drawable/table_header_dark">
	</TextView>
	<Button android:id="@+id/scanbutton_requests" android:background="@drawable/btn_black"
		style="@style/ButtonText" android:layout_below="@+id/title"
		android:text="Scan Requests" android:onClick="scanRequests" android:padding="5dip"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_margin="10dip" android:layout_marginTop="5dip" android:layout_marginBottom="5dip"></Button>
	<Button android:id="@+id/scanbutton_torrents" android:background="@drawable/btn_black"
		android:layout_below="@+id/scanbutton_requests"
		style="@style/ButtonText" 
		android:text="Scan Torrents" android:onClick="scanTorrents" android:padding="5dip"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_margin="10dip" android:layout_marginLeft="10dip"
		android:layout_marginTop="5dip"
		android:layout_marginBottom="5dip"></Button>
	<Button android:id="@+id/quickscan" android:background="@drawable/btn_black"
		android:layout_below="@+id/scanbutton_torrents"
		style="@style/ButtonText" 
		android:text="Quick Scan" android:onClick="quickScan" android:padding="5dip"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_margin="10dip" android:layout_marginLeft="10dip"
		android:layout_marginTop="5dip"
		android:layout_marginBottom="5dip"></Button>
	<Button android:id="@+id/manualbutton" android:background="@drawable/btn_black"
		style="@style/ButtonText" android:layout_below="@+id/quickscan"
		android:text="Enter UPC" android:onClick="manual" android:padding="5dip"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_margin="10dip" android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip" android:layout_marginTop="5dip"
		android:layout_marginBottom="5dip"></Button>
	<Button android:id="@+id/buybutton" android:background="@drawable/btn_black"
		style="@style/ButtonText" android:layout_below="@+id/manualbutton"
		android:text="Buy Music" android:onClick="buy" android:padding="5dip"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_margin="10dip" android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip" android:layout_marginTop="5dip"
		android:layout_marginBottom="5dip"
		android:visibility="gone"
		></Button>
	<Button android:id="@+id/torrentsbutton" android:background="@drawable/btn_black"
		style="@style/ButtonText" android:layout_below="@+id/buybutton"
		android:text="Torrents" android:onClick="torrents" android:padding="5dip"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_margin="10dip" android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip" android:layout_marginTop="5dip"
		android:layout_marginBottom="5dip" android:visibility="gone"></Button>
	<Button android:id="@+id/requestsbutton" android:background="@drawable/btn_black"
		style="@style/ButtonText" android:layout_below="@+id/torrentsbutton"
		android:text="Requests" android:onClick="requests" android:padding="5dip"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_margin="10dip" android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip" android:layout_marginTop="5dip"
		android:layout_marginBottom="5dip" android:visibility="gone"></Button>

	<!-- <ScrollView android:id="@+id/scrollView" android:layout_below="@id/buybutton" 
		android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginTop="10dip" 
		android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:layout_marginBottom="5dip" 
		android:padding="5dip"> <LinearLayout android:id="@+id/scrollLayout" android:layout_height="fill_parent" 
		android:layout_width="fill_parent" android:orientation="vertical"> </LinearLayout> 
		</ScrollView> -->
</RelativeLayout>
