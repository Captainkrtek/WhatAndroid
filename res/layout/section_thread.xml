<?xml version="1.0" encoding="utf-8"?>
<what.gui.ViewSlider xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dip" >

    <LinearLayout
        android:id="@+id/primaryLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/threadTitle"
            style="@style/SectionThreadTitle">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondaryLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/threadLastPoster"
            style="@style/SectionThreadSecondary"
            android:layout_weight="1" >
        </TextView>

        <TextView
            android:id="@+id/threadAuthor"
            style="@style/SectionThreadSecondary"
            android:layout_weight="1" >
        </TextView>
    </LinearLayout>

</what.gui.ViewSlider>