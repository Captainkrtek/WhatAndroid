<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SectionThreadTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textSize">22dip</item>
        <item name="android:textColor">@color/textview_colors</item>
    </style>

    <style name="NotificationText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="NotificationTitle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ForumSectionTitle">
        <item name="android:padding">5dip</item>
        <item name="android:background">@drawable/table_header_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dip</item>
    </style>

    <style name="TopTorrentSectionTitle">
        <item name="android:background">@drawable/table_header_dark</item>
    </style>

    <style name="TopSectionTitleText">
        <item name="android:padding">5dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dip</item>
    </style>

    <style name="TopTorrentNameEven">
        <item name="android:padding">10dip</item>
        <item name="android:background">@drawable/color_transparent_white</item>
        <item name="android:textColor">@color/textview_colors</item>
        <item name="android:textSize">16dip</item>
    </style>

    <style name="TopTorrentNameOdd">
        <item name="android:padding">10dip</item>
        <item name="android:background">@drawable/color_transparent_light_gray</item>
        <item name="android:textColor">@color/textview_colors</item>
        <item name="android:textSize">16dip</item>
    </style>

    <style name="ForumNameOdd">
        <item name="android:padding">10dip</item>
        <item name="android:background">@drawable/color_transparent_light_gray</item>
        <item name="android:textColor">@color/textview_colors</item>
